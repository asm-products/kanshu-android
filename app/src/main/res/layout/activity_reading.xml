<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@id/drawer_layout"
                                        tools:context="com.kanshu.android.activity.ReadingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:paddingTop="25dp"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>

        <fragment
            android:id="@+id/reading_view"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:name="com.kanshu.android.fragment.ReadingViewFragment"
            tools:layout="@layout/fragment_reading_view"/>
    </LinearLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.kanshu.android.fragment.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer"/>
</android.support.v4.widget.DrawerLayout>
