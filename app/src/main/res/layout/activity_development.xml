<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kanshu.kanshu.DevelopmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LoginActivity"
            android:onClick="onLoginActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignupActivity"
            android:onClick="onSignupActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ArticleActivity"
            android:onClick="onArticleActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ReadingActivity"
            android:onClick="onReadingActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TopicsActivity"
            android:onClick="onTopicsActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserMetricsActivity"
            android:onClick="onUserMetricsActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:onClick="onAboutActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:onClick="onFeedbackActivity"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:onClick="onSettingsActivity"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flash card Exercise"
            android:onClick="onFlashCardActivity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android default"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="解放军公布16名军级以上领导干部重大贪腐案件"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NotoSansCJKsc-Regular"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="解放军公布16名军级以上领导干部重大贪腐案件"
            fontPath="fonts/NotoSansCJKsc-Regular.otf"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BabelStoneHan"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="解放军公布16名军级以上领导干部重大贪腐案件"
            fontPath="fonts/BabelStoneHan.ttf"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ChineseTextView"
            android:layout_marginTop="20dp"/>

        <com.kanshu.kanshu.widget.ChineseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="解放军公布16名军级以上领导干部重大贪腐案件"/>

    </LinearLayout>
</ScrollView>