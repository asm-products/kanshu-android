<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.kanshu.kanshu.ReadingViewFragment"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                android:background="#F5F5F5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:text="AAAAAAA AAAAAAAAAAAAA AAAAAAAAA AAAAAAA AAAAAAAAAA AAAAAAAAAAA AAAA AAAA AAA AAAAAAA AAAAAA AAAAA AA AAAA"
        android:textSize="40sp"
        android:textColor="#000000"
        android:id="@+id/sample_text"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blurredText"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/levelSliderFrame"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:alpha="0.8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/slider_border"
            android:id="@+id/alphaSlider"
            android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aa"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:id="@+id/sliderFrame"
                >
    <com.edmodo.rangebar.TickedSeekBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_height"
        android:maxHeight="@dimen/slider_height"
        android:progressDrawable="@drawable/hsk_slider_progress"
        custom:thumbColorNormal="@color/primary_dark_red"
        custom:thumbColorPressed="@color/article_light_grey"
        custom:connectingLineColor="@color/primary_dark_red"
        custom:barColor = "@color/primary_light_red"
        custom:tickHeight ="2pt"
        custom:tickCount ="8"
        custom:thumbRadius="7pt"
        android:id="@+id/textsizeSlider"/>
            </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aa"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textSize="26sp"
        android:layout_alignParentRight="true"
        />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/slider_border"
            android:id="@+id/hanziSlider"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汉字"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                >
                <com.edmodo.rangebar.TickedSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/slider_height"
                    android:maxHeight="@dimen/slider_height"
                    android:progressDrawable="@drawable/hsk_slider_progress"
                    custom:thumbColorNormal="@color/primary_dark_red"
                    custom:thumbColorPressed="@color/article_light_grey"
                    custom:connectingLineColor="@color/primary_dark_red"
                    custom:barColor = "@color/primary_light_red"
                    custom:tickHeight ="2pt"
                    custom:tickCount ="8"
                    custom:thumbRadius="7pt"
                    android:id="@+id/sizehanziSlider"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汉字"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/slider_border"
            android:id="@+id/hskSlider">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wo"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                >
                <com.edmodo.rangebar.TickedSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/slider_height"
                    android:maxHeight="@dimen/slider_height"
                    android:progressDrawable="@drawable/hsk_slider_progress"
                    custom:thumbColorNormal="@color/primary_dark_red"
                    custom:connectingLineColor="@color/primary_dark_red"
                    custom:barColor = "@color/primary_light_red"
                    custom:tickHeight ="2pt"
                    custom:tickCount ="8"
                    custom:thumbRadius="7pt"
                    custom:thumbColorPressed="@color/article_light_grey"
                    android:id="@+id/levelSlider"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
